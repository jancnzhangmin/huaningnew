<script>
  $(document).ready(function(){

    $('#isactive').click(function(){

      var flag = $('#isactive').is(':checked');
      if(flag)
      {
        $('#active').val('1');
      }else
      {
        $('#active').val('0');
      }



    });



});
</script>
<div class="ibox-content form-horizontal m-t">


  <div class="form-group">
    <%= form_for(@banner,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>

  </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">标题：</label>
          <div class="col-sm-6">
            <%= f.text_field :title, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label">链接：</label>
          <div class="col-sm-6">
            <%= f.text_field :link, class:"form-control" %>
          </div>
        </div>


          <div class="form-group">
            <label class="col-sm-3 control-label">显示:</label>
              <div class="col-sm-6 checkbox">
                <input type="checkbox" value="1" id="isactive">
            </div>
          </div>

          <div>
            <%= f.hidden_field :active, class:"form-control" ,id:"active"%>
          </div>


        <div class="form-group">
          <label class="col-sm-3 control-label">主页图片：</label>
          <div class="col-sm-6">
            <%= f.file_field :banner, placeholder:"Banner" %>
          </div>
        </div>



  <div class="actions">
    <%= f.submit'确定',class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
  </div>
<% end %>

    <%= link_to '返回', banners_path %>
    </div>
  </div>





