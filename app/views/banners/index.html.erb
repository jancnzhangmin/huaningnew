<%= render 'application/left' %>
<%= render 'application/top' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5><%= @title %></h5>
    </div>
    <div class="ibox-content">
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>标题</th>
      <th>链接</th>
      <th>显示</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banners.each do |banner| %>
      <tr>
        <td><%= banner.title %></td>
        <td><%= banner.link %></td>
        <td><%= banner.active %></td>
        <td><%= image_tag banner.banner.url %></td>
        <td><%= link_to '编辑', edit_banner_path(banner) %></td>
        <td><%= link_to '删除', banner, method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建', new_banner_path ,class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
<br>
    </div>
  </div>
</div>