

<div class="pages">
  <!-- Page, data-page contains page name-->
  <div data-page="showusers" class="page">
    <!-- Scrollable page content-->
      <div class="page-content login-screen-content">
        <div class="login-screen-title">注册用户</div>



        <%= form_for(@showuser) do |f| %>
            <% if @showuser.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@showuser.errors.count, "error") %> prohibited this user from being saved:</h2>

                  <ul>
                    <% @showuser.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <div class="field">
              <%= f.label :用户名 %><br>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label :密码%><br>
              <%= f.text_field :password_digest %>
            </div>
            <div class="field">
              <%= f.label :电话 %><br>
              <%= f.text_field :tel %>
            </div>


            <div class="actions">
              <%= f.submit %>
            </div>
        <% end %>

      </div>

  </div>
</div>