<div class="navbar">
  <div class="navbar-inner">
    <div class="left"><a href="#" data-no-turbolink = "true" class="back link"> <i class="icon icon-back"></i><span></span></a></div>
    <div class="center sliding"></div>
    <div class="right">
      <!-- Right link contains only icon - additional "icon-only" class--><a href="#" class="link icon-only open-panel"> <i class="icon icon-bars"></i></a>
    </div>
  </div>
</div>

<div class="pages">
  <!-- Page, data-page contains page name-->
  <div data-page="showusers" class="page">
    <!-- Scrollable page content-->
      <div class="page-content login-screen-content">
        <div class="login-screen-title">注册用户</div>
        <%= form_for(@showuser,:html => {:class=>'list-block'}) do |f| %>
            <ul>
              <li>
                <div class="item-content">
                  <div class="item-inner">
                    <div class="item-title label">姓名</div>
                    <div class="item-input">
                      <%= f.text_field :name,placeholder:"姓名" %>
                    </div>
                  </div>
                </div>
              </li>

              <li>
                <div class="item-content">
                  <div class="item-inner">
                    <div class="item-title label">用户名</div>
                    <div class="item-input">
                      <%= f.text_field :login,placeholder:"手机号码",id:'phone' %>
                    </div>
                  </div>
                </div>
              </li>

              <li>
                <div class="item-content">
                  <div class="item-inner">
                    <div class="item-title label">密码</div>
                    <div class="item-input">
                      <%= f.password_field :password,placeholder:"密码" %>
                    </div>
                  </div>
                </div>
              </li>

              <li>
                <div class="item-content">
                  <div class="item-inner">
                    <div class="item-title label">确认密码</div>
                    <div class="item-input">
                      <%= f.password_field :password_confirmation,placeholder:"确认密码" %>
                    </div>
                  </div>
                </div>
              </li>



              <div class="content-block">
                <%= f.submit '确定',class:'button back',id:'smt' %>
              </div>

              </ul>




        <% end %>
      </div>

  </div>
</div>