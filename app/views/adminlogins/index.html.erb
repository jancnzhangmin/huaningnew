<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <br>

      <h2>管理员登陆</h2>

    </div>


    <br><br><br>
    <div class="">
      <div class="content">
        <%= form_for(:login,:html => {:class=>'m-t'}) do |f| %>
            <div class="form-group">

              <%= f.text_field :name ,class:"form-control",placeholder:"姓名"%>
            </div>
            <div class="form-group">

              <%= f.text_field :login ,class:"form-control",placeholder:"登陆名" %>
            </div>


            <div class="form-group">
              <%= f.password_field :password ,class:"form-control",placeholder:"密码" %>
            </div>


            <div class="form-group">
              <%= f.text_field :auth ,class:"form-control",placeholder:"权限" %>
            </div>


            <div class="form-group">
              <%= f.text_field :status ,class:"form-control",placeholder:"状态" %>
            </div>

            <% if(params[:id])=="0" %>
                <div class="alert alert-danger">
                  登陆名或密码错误！
                </div>
            <% end %>
            <% if(params[:id])=="1" %>
                <div class="alert alert-danger">
                  用户已停用！
                </div>
            <% end %>
            <h2>
              <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>
            </h2>


        <% end %>


      </div>
    </div>
  </div>
</div>