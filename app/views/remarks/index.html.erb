<%= render 'application/left' %>
<%= render 'application/top' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <th>评论</th>
          <th>用户</th>
          <th>评论位置</th>
          <th>审核状态</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @comments.each do |comment| %>
            <tr>
              <td><%= comment.summary %></td>
              <td><%= comment.user_id %></td>
              <td><%= comment.content_id %></td>
              <td><%= comment.isshow %></td>
              <td><%= link_to '编辑', edit_remarks_path(comment) %></td>
              <td><%= link_to '删除', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>

            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to '新建', new_remark_path ,class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
          </div>
          </div>
          </div>


