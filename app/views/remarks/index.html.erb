<script>

  $(document).ready(function(){
var ischeck;
      $("input[type='checkbox']").click(function(){
          ischeck = this.id;

          $.ajax({

              type: 'get',

              url: '/remarks/change?c='+ischeck ,

              data: '' ,

              success: '' ,

              dataType: ''

          });



      });

  });




  $(document).ready(function(){
      $('#remarks1').click(function(){
          var flag = $('#remarks1').is(':checked');
          if(flag)
          {
              $('#isshow').val('1');
          }else
          {
              $('#isshow').val('0');
          }
      });
  });



  $(document).ready(function(){
      $('#remarks2').click(function(){
          var flag = $('#remarks2').is(':checked');
          if(flag)
          {
              $('#isshow').val('2');
          }else
          {
              $('#isshow').val('0');
          }
      });
  });


  $(document).ready(function(){
      $('#remarks3').click(function(){
          var flag = $('#remarks3').is(':checked');
          if(flag)
          {
              $('#isshow').val('3');
          }else
          {
              $('#isshow').val('0');
          }
      });
  });
</script>
<%= render 'application/left' %>
<%= render 'application/top' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <th>评论</th>
          <th>用户</th>
          <th>评论位置</th>
          <th>审核状态</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @remarks.each do |remark| %>
            <tr>

              <td><%= remark.summary %></td>
              <td><%= remark.user_id %></td>
              <td><%= remark.content_id %></td>
              <td>


                <% if remark.isshow == 0 %>
                    <input type="checkbox" checked id=<%= 'w' + remark.id.to_s %>>
                    <label for="wei">未审核</label>
                <% else %>
                    <input type="checkbox" id=<%= 'w' + remark.id.to_s %>>
                <% end %>
                <% if remark.isshow == 1 %>
                    <input type="checkbox" checked id=<%= 'd' + remark.id.to_s %>>
                <% else %>
                    <input type="checkbox" id=<%= 'd' + remark.id.to_s %>>
                    <label for="ju">拒绝</label>
                <% end %>
                <% if remark.isshow == 2 %>
                    <input type="checkbox" checked id=<%= 'y' + remark.id.to_s %>>
                <% else %>
                    <input type="checkbox" id=<%= 'y' + remark.id.to_s %>>
                    <label for="yi">已审核</label>
                <% end %>





              </td>

              <td><%= link_to '编辑',edit_remark_path(remark) %></td>
              <td><%= link_to '删除', remark_path(remark), method: :delete, data: { confirm: '确定删除?' } %></td>

            </tr>
        <% end %>
        </tbody>
      </table>


      </div>
    </div>
  </div>


