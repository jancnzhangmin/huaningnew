<script>
    $(document).ready(function(){

        $('#show').click(function(){

            var flag = $('#show').is(':radio');
            if(flag)
            {
                $('#isshow').val('0');
            }else
            {
                $('#isshow').val('1');
            else
                {
                    $('isshow').val('2')
                }
            }
        }



    });


    $('input:radio:first').attr('checked', 'checked');
</script>
<div class="ibox-content form-horizontal m-t">


  <div class="form-group">
    <%= form_for(@comment,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>

        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">标题：</label>
          <div class="col-sm-6">
            <%= f.text_field :summary, class:"form-control" %>
           </div>
        </div>

        <div class="form-group">
           <label class="col-sm-3 control-label">链接：</label>
           <div class="col-sm-6">
             <%= f.text_field :content_id, class:"form-control" %>
           </div>
        </div>

        <div class="form-group">
           <label class="col-sm-3 control-label">主页图片：</label>
           <div class="col-sm-6">
             <%= f.file_field :user_id, placeholder:"Banner" %>
           </div>
        </div>


        <div class="form-group">
          <label class="col-sm-3 control-label">待审核:</label>
          <div class="col-sm-6 radio">
            <input type="radio" value="0" ids="show">
          </div>


        <label class="col-sm-3 control-label">显示:</label>
          <div class="col-sm-6 radio">
            <input type="radio" value="1" ids="show">
          </div>

        <label class="col-sm-3 control-label">拒绝:</label>
           <div class="col-sm-6 radio">
             <input type="radio" value="2" ids="show">
           </div>
         </div>

        <div>
          <%= f.hidden_field :isshow, class:"form-control" ,id:"active"%>
        </div>



        <div class="actions">
           <%= f.submit'确定',class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
        </div>
          <% end %>

          <%= link_to 'Back', remarks_path %>
    </div>
  </div>



