<%= render 'application/left' %>
<%= render 'application/top' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5><%= @title %></h5>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <th></th>
          <th>姓名</th>
          <th>电话</th>
          <th>状态</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td style="max-width :100px;overflow:hidden"><%= user.name %></td>
              <td ><%= user.tel %></td>
              <td><%= user.vcode %></td>
              <td><%= link_to '编辑', edit_user_path(user) %></td>
              <td><%= link_to '删除', user, method: :delete, data: { confirm: '确定删除吗?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>



      <div class="text-center">



      </div>

      <br>
          </div>
          </div>
          </div>


