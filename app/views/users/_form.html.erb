
<script>
    $(document).ready(function(){

        $('#isvcode').click(function(){

            var flag = $('#isvcode').is(':checked');
            if(flag)
            {
                $('#vcode').val('1');
            }else
            {
                $('#vcode').val('0');
            }


        });



    });
</script>

<div class="ibox-content form-horizontal m-t">


  <div class="form-group">
    <%= form_for(@user,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>

        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">姓名：</label>
          <div class="col-sm-6">
            <%= f.text_field :name, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label">密码：</label>
          <div class="col-sm-6">
            <%= f.text_field :password_digest, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label">电话：</label>
          <div class="col-sm-6">
            <%= f.text_field :tel, class:"form-control" %>
          </div>
         </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">禁用:</label>
                  <div class="col-sm-6">
                    <%= check_box_tag(:isvcode) %>
                  </div>
                </div>

                <div>
                  <%= f.hidden_field :vcode, class:"form-control" ,id:"vcode"%>
                      </div>




                      <div class="actions">
          <%= f.submit'确定',class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
        </div>
     <% end %>

  <%= link_to '返回', users_path %>
  </div>
</div>

