<script>

    $(document).ready(function() {
        var check
        $('#smt').click(function() {
            check="";
            $('.isvcode:checked').each(function(){
                check+=$(this).val();
            });
            $('#vcode').val(check);
        });
        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green'
        });

        var typecheck = $("#vcode").val().split(':');
        $.each(typecheck,function(i,n){
            if (n=='keyong') {
                $('#keyong').iCheck('check');
            }

            if (n=='jinyong'){
                $('#jinyong').iCheck('check')
            }
        })

        $('#keyong').on('ifChecked',function(event){
            $('#jinyong').iCheck('uncheck');
        });

        $('#jinyong').on('ifChecked',function(event){
            $('#keyong').iCheck('uncheck');
        });

    });

</script>


