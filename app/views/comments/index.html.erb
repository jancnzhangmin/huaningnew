<div class="navbar">
  <div class="navbar-inner">
    <div class="left"><a href="#" data-no-turbolink = "true" class="back link"> <i class="icon icon-back"></i><span></span></a></div>
    <div class="center sliding">评论</div>
    <div class="right">
      <!-- Right link contains only icon - additional "icon-only" class--><a href="#" class="link icon-only open-panel"> <i class="icon icon-bars"></i></a>
    </div>
  </div>
</div>


<div class="pages">
  <!-- Page, data-page contains page name-->
  <div data-page="showcontent" class="page">
    <!-- Scrollable page content-->
    <div class="page-content">
      <div class="content-block">
        <div class="content-block-inner">


<% @content.comments.order('id desc').each do |comment| %>




              <div class="list-block media-list">
                <ul>
                  <li>
                    <a href="#" class="item-link item-content">
                      <div class="item-inner">
                        <div class="item-title">
                          <div class="item-title">
                            <% @comment.each do |f| %>
                                <% if f.isshow == 2 %>
                                   <% @users.each do |user| %>
                                      <% if user.id == comment.user_id %>
                                           <%= user.name %></td>
                                      <% end %>
                                    <% end %>
                                <% end %>
                            <% end %>
                          </div>
                        </div>


                        <div class="item-text">
                          <% @comment.each do |f| %>
                          <% if f.isshow == 2 %>
                          <%= f.summary %>
                              <% end %>
                          <% end %>
                        </div>
                      </div>
                    </a>
                  </li>
                </ul>
              </div>


<% end %>

            </div>
          </div>
        </div>
      </div>
    </div>