<%= render 'application/left' %>
<%= render 'application/top' %>

<div class="col-lg-12">
  <div class="ibox float-e-margins">


<h1>广告</h1>
    <div class="ibox-content">
      <table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>标题</th>
      <th>链接</th>
      <th>显示</th>
      <th>广告</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adverts.each do |advert| %>
      <tr>
        <td class="col-sm-1 control-label"><%= advert.title %></td>
        <td class="col-sm-1 control-label"><%= advert.link %></td>
        <td class="col-sm-1 control-label"><%= advert.active %></td>
        <td class="col-sm-7 control-label"><%= image_tag advert.advert.url %></td>
        <td class="col-sm-1 control-label"><%= link_to '编辑', edit_advert_path(advert) %></td>
        <td class="col-sm-1 control-label"><%= link_to '删除', advert, method: :delete, data: { confirm: '确定删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建', new_advert_path , class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
    </div>
  </div>
</div>