                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="item-content">
                          <div class="item-inner">
                            <div class="item-input">
                              <%= f.text_area :summary,id:'summary' %>
                            </div>
                          </div>
                        </div>
                      </li>
                      <%= f.hidden_field :user_id,value:session[:userid],id:'user_id' %>
