

<%= render 'application/left' %>
<%= render 'application/top' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5><%= @title %></h5>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <th>姓名</th>
          <th>登陆名</th>
          <th>权限</th>
          <th>状态</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @admins.each do |adm| %>
            <tr>
              <td class="col-sm-1 control-label"><%= adm.name %></td>
              <td class="col-sm-1 control-label"><%= adm.login %></td>
              <td class="col-sm-6 control-label"><%= adm.auth %></td>
              <td class="col-sm-1 control-label"><%= adm.status %></td>
              <td class="col-sm-1 control-label"><%= link_to '编辑', edit_admin_path(adm) %>&nbsp;&nbsp;
              <td class="col-sm-1 control-label"><%= link_to '删除', adm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to '新建管理员', new_admin_path ,class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
      <br>
    </div>
  </div>
</div>
