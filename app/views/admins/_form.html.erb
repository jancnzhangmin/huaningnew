<script>
    $(document).ready(function(){

        $('#isactive').click(function(){

            var flag = $('#isactive').is(':checked');
            if(flag)
            {
                $('#active').val('1');
            }else
            {
                $('#active').val('0');
            }



        });



    });
</script>
<div class="ibox-content form-horizontal m-t">


  <div class="form-group">
    <%= form_for(@admin,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>

        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">姓名：</label>
          <div class="col-sm-6">
            <%= f.text_field :name, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label">登陆名：</label>
          <div class="col-sm-6">
            <%= f.text_field :login, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label">密码：</label>
          <div class="col-sm-6">
            <%= f.password_field :password, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
        <label class="col-sm-3 control-label">确认密码：</label>
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, class:"form-control" %>
        </div>
        </div>



        <div class="form-group">
          <label class="col-sm-3 control-label">权限：</label>
          <div class="col-sm-6">
            <%= f.text_field :auth, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label">状态：</label>
          <div class="col-sm-6">
            <%= f.text_field :status,class:"form-control" %>
          </div>
        </div>



        <div class="actions">
          <%= f.submit'确定',class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
        </div>
    <% end %>
    </div>
</div>




